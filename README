传统做法
http://www.open-open.com/lib/view/open1384090071946.html


CREATE TABLE `upgrade` (
  `id` int(11) NOT NULL AUTO_INCREMENT,
  `fileName` varchar(255) DEFAULT NULL,
  `fileSize` varchar(255) DEFAULT NULL,
  `fileType` varchar(255) DEFAULT NULL,
  `deleteUrl` varchar(255) DEFAULT NULL,
  `downloadUrl` varchar(255) DEFAULT NULL,
  `deleteType` varchar(255) DEFAULT NULL,
  `fsUrl` varchar(255) DEFAULT NULL,
  `cdnUrl` varchar(255) DEFAULT NULL,
  `createTime` timestamp NULL DEFAULT NULL,
  PRIMARY KEY (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=7 DEFAULT CHARSET=utf8;

